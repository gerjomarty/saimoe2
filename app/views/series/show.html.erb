<%- model_class = @series.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @series.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:color_code) %>:</strong><br>
  <%= @series.color_code %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:slug) %>:</strong><br>
  <%= @series.slug %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              series_path, :class => 'btn'  %>
  <%#%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_series_path(@series), :class => 'btn' %>
  <%#%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              series_path(@series),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>

<%- model_class = Series.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:color_code) %></th>
      <th><%= model_class.human_attribute_name(:slug) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @series.each do |series| %>
      <tr>
        <td><%= link_to series.id, series_path(series) %></td>
        <td><%= series.name %></td>
        <td><%= series.color_code %></td>
        <td><%= series.slug %></td>
        <td><%=l series.created_at %></td>
        <td>
          <%#%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_series_path(series), :class => 'btn btn-mini' %>
          <%#%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      series_path(series),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


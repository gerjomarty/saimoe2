<% cache vm.dependencies do %>
    <div class="match-view-model <%= vm.info_position_class %>" style="<%= vm.style %>" <%= 'itemscope itemtype="http://schema.org/Event"'.html_safe if vm.schema_markup %>>
        <% if vm.schema_markup %>
            <meta itemprop="name" content="<%= vm.match.pretty(:long) %>" />
        <% end %>
        <div class="match-entries <%= vm.info_position_class %>">
            <% vm.character_entries.each.with_index do |ce, i| %>
                <%= render partial: 'view_models/character_entry',
                           object: ce,
                           as: :vm %>
                <% if vm.info_position_class == 'info-bottom' && i.odd? %>
                    <div class="cb"></div>
                <% end %>
            <% end %>
        </div>

        <% if vm.info_position_class == 'info-bottom' %>
            <div class="cb"></div>
        <% end %>
        
        <%= vm.match_info_div %>
        <div class="cb"></div>
    </div>
<% end %>
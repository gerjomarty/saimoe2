<h1>Listing characters</h1>

<%= link_to 'New Character', new_admin_character_path %>

<br />

<table>
<% @characters.each do |character| %>
  <tr>
    <td><%= character.full_name %></td>
    <td><%= character.main_series.name %></td>
    <td><%= link_to 'Show', character %></td>
    <td><%= link_to 'Edit', edit_admin_character_path(character) %></td>
    <td><%= link_to 'Destroy', admin_character_path(character), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

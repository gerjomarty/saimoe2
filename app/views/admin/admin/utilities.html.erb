<div class="page-header">
  <h1>Utilities</h1>
</div>

<%= form_for :info, html: {class: 'form-horizontal'} do |f| -%>
  <div class="row-fluid">
    <div class="span6">
      <h2>Characters</h2>
      <h4>In format <em>Japanese Character Name,English Character Name</em> - one per line</h4>
      <%= f.file_field :character_csv %>
    </div>
    <div class="span6">
      <h2>Series</h2>
      <h4>In format <em>Japanese Series Name,English Series Name</em> - one per line</h4>
      <%= f.file_field :series_csv %>
    </div>
  </div>

  <h2>Text to transform</h2>
  <div class="well">
    <h4>
      <%= f.radio_button :transform, :name_list, checked: true %>
      <%= f.label :transform_name_list do %>
        Convert list of names in format <em>一次予選XX組 JP Name＠JP Series</em> - one per line
      <% end %>
    </h4>
    <h4>
      <%= f.check_box :name_order_by_name %>
      <%= f.label :name_order_by_name, 'Order by name' %>
    </h4>
    <%= f.file_field :name_csv %>
  </div>
  <div class="well">
    <h4>
      <%= f.radio_button :transform, :result_list %>
      <%= f.label :transform_result_list do %>
        Convert list of results in format <em>1位　427票　JP Name＠JP Series</em> - one per line
      <% end %>
    </h4>
    <h4>
      <%= f.check_box :result_show_percent %>
      <%= f.label :result_show_percent, 'Show percentages' %>
    </h4>
    <%= f.file_field :result_csv %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end -%>

<div class="page-header">
  <h2>Clear cache</h2>
</div>

<div class="well">
  <p>Clicking here will force a reload of the information on the tournament screens.</p>
  <p><%= link_to "Clear the cache", admin_clear_cache_path, class: 'btn btn-warning' %></p>
</div>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Saimoe" %></title>
    <%= csrf_meta_tags %>

    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", media: "all" %>
    <%= analytics_init if Rails.env.production? %>

    <%#<link href="images/favicon.ico" rel="shortcut icon">%>
    <%#<link href="images/apple-touch-icon.png" rel="apple-touch-icon">%>
    <%#<link href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72">%>
    <%#<link href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114">%>
  </head>

  <body>
    <%= nav_bar static: :top, responsive: true, inverse: true, brand: image_tag('saimoe-logo.png'), brand_link: '#' do %>

      <%= menu_group do %>
        <%= menu_item 'Home', root_path %>

        <%= drop_down 'Tournaments' do %>
          <% Tournament.ordered.reverse_order.each do |t| %>
            <%= menu_item t.year, short_tournament_path(t.year) %>
          <% end %>
        <% end %>

        <%= menu_item 'Characters', characters_path %>
        <%= menu_item 'Series', series_index_path %>
        <%= menu_item 'Voice Actors', voice_actors_path %>
      <% end %>

      <%= menu_group pull: :right do %>
        <form class="navbar-form">
          <%= AutocompleteBox.new(autocomplete_path, 'Search').render %>
        </form>
      <% end %>

    <% end %>

    <% if content_for? :tournament_nav %>
      <%= yield :tournament_nav %>
    <% end %>

    <div class="container-fluid" style="margin-top: 18px;">
      <div class="row-fluid">
        <div class="span12">

          <% if flash[:alert] %>
            <div class="alert alert-error fade in">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <%= flash[:alert] %>
            </div>
          <% end %>
          <% if flash[:notice] %>
            <div class="alert fade in">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <%= flash[:notice] %>
            </div>
          <% end %>

          <%= yield %>
        </div>
      </div><!--/row-->
    </div> <!-- /container -->

    <%= javascript_include_tag "application" %>

  </body>
</html>

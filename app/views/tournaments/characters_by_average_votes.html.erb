<div class="page-header">
  <h1>Characters <small>Sorted by average votes gained over their matches in Saimoe <%= @tournament.year %></small></h1>
</div>

<table class="table table-condensed table-striped">
  <tbody>
  <% @results.each do |rank, average_votes, character, series| %>
      <tr>
        <td><%= rank.ordinalize %></td>
        <td><%= format_float average_votes %></td>
        <td><%= link_to character.full_name, character_path(character) %> @ <%= link_to series.name, series_path(series) %></td>
      </tr>
  <% end %>
  </tbody>
</table>
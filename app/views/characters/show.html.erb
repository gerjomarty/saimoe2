<div class="row-fluid" xmlns="http://www.w3.org/1999/html">
  <% if @character.avatar? %>
    <div class="span2" style="text-align: center;">
      <%= image_tag @character.avatar_url, size: '100x100' %>
    </div>
    <div class="span9 offset1">
  <% else %>
    <div class="span12">
  <% end %>
      <h1><%= @character.full_name %></h1>
      <h3>Series: <em><%= link_to @character.main_series.name, series_path(@character.main_series) %></em></h3>
      <%= format_other_series_list @character %>
    </div>
</div>

<div class="page-header">
  <h2>Statistics</h2>
</div>

<p>
  Stuff
</p>

<div class="page-header">
  <h2>Tournament History</h2>
</div>

<dl class="dl-horizontal">
  <% @character.tournament_history.each do |t, th| %>
    <p>
      <dt>
        <h3><%= t.year %></h3>
      </dt>
      <dd>
        <%= format_tournament_buttons t, th %>
      </dd>
    </p>
  <% end %>
</dl>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              characters_path, :class => 'btn'  %>
</div>

<div class="row-fluid">
  <% if @character.avatar? %>
    <div class="span2" style="text-align: center;">
      <%= image_tag @character.avatar_url, size: '100x100' %>
    </div>
    <div class="span9 offset1">
  <% else %>
    <div class="span12">
  <% end %>
      <h1><%= @character.full_name %></h1>
      <h3>Series: <em><%= link_to @character.main_series.name, series_path(@character.main_series) %></em></h3>
      <%= format_other_series_list @character %>
    </div>
</div>

<div class="page-header">
  <h2>Statistics</h2>
</div>

<div class="row-fluid">
  <div class="span12">
    Stuff
  </div>
</div>

<div class="page-header">
  <h2>Tournament History</h2>
</div>

<div class="row-fluid">
  <div class="span12">
    More stuff
  </div>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              characters_path, :class => 'btn'  %>
</div>
